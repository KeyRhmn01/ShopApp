<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <RelativeLayout
        android:id="@+id/clickRelCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20cdp"
        android:layout_marginTop="@dimen/_20cdp"
        android:layout_marginEnd="@dimen/_20cdp"
        android:layout_marginBottom="@dimen/_20cdp"
        android:background="@drawable/background_cart">

        <ImageView
            android:id="@+id/pic"
            android:layout_width="@dimen/_60cdp"
            android:layout_height="@dimen/_120cdp"
            android:layout_alignParentRight="true"
            android:layout_marginStart="@dimen/_20cdp"
            android:layout_marginTop="@dimen/_20cdp"
            android:layout_marginEnd="@dimen/_20cdp"
            android:layout_marginBottom="@dimen/_20cdp" />

        <TextView
            android:id="@+id/titleCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20cdp"
            android:layout_marginRight="@dimen/_20cdp"
            android:layout_toLeftOf="@id/pic"
            android:text="Spring collection"
            android:textColor="@color/black"
            android:textSize="@dimen/_15cdp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/priceCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleCart"
            android:layout_marginTop="@dimen/_10cdp"
            android:layout_marginRight="@dimen/_20cdp"
            android:layout_toLeftOf="@id/pic"
            android:text="560000"
            android:textColor="@color/main"
            android:textSize="@dimen/_12cdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/descCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/priceCart"
            android:layout_marginStart="@dimen/_20cdp"
            android:layout_marginTop="@dimen/_20cdp"
            android:layout_marginEnd="@dimen/_20cdp"
            android:layout_marginBottom="@dimen/_20cdp"
            android:layout_toLeftOf="@id/pic"
            android:ellipsize="end"
            android:lines="3"
            android:textColor="@color/black"
            android:textSize="@dimen/_10cdp" />

        <LinearLayout
            android:id="@+id/aa"
            android:layout_width="@dimen/_60cdp"
            android:layout_height="@dimen/_20cdp"
            android:layout_marginLeft="@dimen/_20cdp"
            android:layout_marginTop="@dimen/_20cdp"
            android:background="@drawable/corners"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/neg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_3cdp"
                    android:src="@drawable/ic_baseline_remove_24" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/corners_white">

                <TextView
                    android:id="@+id/number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:inputType="number"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10cdp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/plus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_4cdp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/plus" />


            </LinearLayout>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/remove"
            android:layout_width="@dimen/_60cdp"
            android:layout_height="@dimen/_30cdp"
            android:layout_below="@id/aa"
            android:layout_marginLeft="@dimen/_22cdp"
            android:layout_marginTop="@dimen/_5cdp"
            android:background="@drawable/corners"
            android:text="حذف"
            android:textColor="@color/white"
            android:textStyle="bold" />


    </RelativeLayout>

</RelativeLayout>